<template id="noheader_report_purchaseorder_document">
    
        <div class="page">
            <div class="row" style="width: 5%; padding:5%">      
            </div>
            <h2 t-if="o.state != 'draft'" style="text-align:center;">Bon de commande</h2><br/><br/>
            <h2 t-if="o.state == 'draft'">Request for Quotation N°<span t-field="o.name"/><span t-field="o.code_projet"/></h2>
            <div class="oe_structure"/>
            <div class="row">

                <div class="col-xs-6">
                  <ul class="list-unstyled">
                    <li t-if="o.partner_id">Fournisseur: <span t-field="o.partner_id"/></li>
                    <li t-if="o.partner_id.street">Siège: <span t-field="o.partner_id.street"/></li>
                    <li t-if="o.partner_id.fax">Fax: <span t-field="o.partner_id.fax"/></li>
                    <li t-if="o.partner_id.phone">Cel: <span t-field="o.partner_id.phone"/></li>
                    <li t-if=" o.date_order2">Date: <span t-field=" o.date_order2"/></li>
                     <li t-if="o.partner_id.street">Siège: <span t-field="o.partner_id.street"/></li>
                     <li t-if="o.partner_id.street2">Siège 2: <span t-field="o.partner_id.street2"/></li>
                  </ul>
              </div>
              <div class="col-xs-6">
                
                <ul class="list-unstyled">
                  <li>BC N°:<span t-field="o.name"/><span t-field="o.code_projet.name"/></li>
                  <li t-if=" o.date_order2">Date : <span t-field=" o.date_order2"/></li>
                   <li t-if=" o.partner_ref">Proforma : <span t-field=" o.partner_ref"/></li>
              </ul> 
              </div>
                <!--<div class="col-xs-6">
                    <strong>Shipping address:</strong>
                    <div t-if="o.dest_address_id">
                        <div t-field="o.dest_address_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                    </div>

                    <div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                        <span t-field="o.picking_type_id.warehouse_id.name"/>
                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "phone", "fax"], "no_marker": true}'/>
                    </div>
                </div>
                <div class="col-xs-5 col-xs-offset-1">
                    <div t-field="o.partner_id"
                        t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                        <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
                </div>-->
            </div>

            <!--<h2 t-if="o.state != 'draft'">Purchase Order Confirmation N°<span t-field="o.name"/></h2>-->
            <!--<h2 t-if="o.state == 'draft'">Request for Quotation N°<span t-field="o.name"/></h2>-->

            <div class="row mt32 mb32">
                <!--<div t-if="o.name" class="col-xs-3">
                    <strong>Our Order Reference:</strong>
                    <p t-field="o.name"/>
                </div>
                <div t-if="o.partner_ref" class="col-xs-3">
                    <strong>Your Order Reference</strong>
                    <p t-field="o.partner_ref"/>
                </div>
                <div t-if="o.date_order" class="col-xs-3">
                    <strong>Order Date:</strong>
                    <p t-field="o.date_order"/>
                </div>
                <div t-if="o.validator" class="col-xs-3">
                    <strong>Validated By:</strong>
                    <p t-field="o.validator"/>
                </div>-->
            </div>

            <table class="table table-condensed" style="border: 1px solid black;">
               <thead style="border: 1px solid black;">
                    <tr style="border: 1px solid black;">
                        <th style="border: 1px solid black;"><strong>Désignation</strong></th>
                        <!--<th style="border: 1px solid black;"><strong>Taxes</strong></th>
                        <th class="text-center" style="border: 1px solid black;"><strong>Date Req.</strong></th>-->
                        <th class="text-right" style="border: 1px solid black;"><strong>Qty</strong></th>
                        <th class="text-right" style="border: 1px solid black;"><strong>Unité</strong></th>
                        <th class="text-right" style="border: 1px solid black;"><strong>Unit Price</strong></th>
                        <th class="text-right" style="border: 1px solid black;"><strong>Net Price</strong></th>
                    </tr>
                </thead>
                <tbody style="border: 1px solid black;">
                    <tr t-foreach="o.order_line" t-as="line" style="border: 1px solid black;">
                        <td style="border: 1px solid black;">
                            <span t-field="line.name"/>
                        </td>
                        <!--<td style="border: 1px solid black;">
                            <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                        </td>
                        <td class="text-center" style="border: 1px solid black;">
                            <span t-field="line.date_planned"/>
                        </td>-->
                        <td class="text-right" style="border: 1px solid black;">
                            <span t-field="line.product_qty"/>
                            <!--<span t-field="line.product_uom.name" groups="product.group_uom"/>-->
                        </td>
                        <td class="text-right" style="border: 1px solid black;">
                            <span t-field="line.product_uom"/>
                            <!--<span t-field="line.product_uom.name" groups="product.group_uom"/>-->
                        </td>
                        <td class="text-right" style="border: 1px solid black;">
                            <span t-field="line.price_unit"/>
                        </td>
                        <td class="text-right" style="border: 1px solid black;">
                            <span t-field="line.price_subtotal"
                                t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="row">
                <div class="col-xs-4 pull-right">
                    <table class="table table-condensed" style="border: 1px solid black;">
                        <tr class="border-black" style="border: 1px solid black;">
                            <td style="border: 1px solid black;"><strong>Total Without Taxes</strong></td>
                            <td class="text-right" style="border: 1px solid black;">
                                <span t-field="o.amount_untaxed"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td style="border: 1px solid black;">Taxes</td>
                            <td class="text-right" style="border: 1px solid black;">
                                <span t-field="o.amount_tax"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                        <tr class="border-black" style="border: 1px solid black;">
                            <td style="border: 1px solid black;"><strong>Total</strong></td>
                            <td class="text-right" style="border: 1px solid black;">
                                <span t-field="o.amount_total"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <p t-field="o.notes"/><br/><br/>
            <div class="row"> 
                    <ul>
                        <li t-if="o.minimum_planned_date"> Delai de Livraison: <span t-field="o.minimum_planned_date"/></li>
                        <li t-if="o.picking_type_id">Lieu de livraison:
                        <span t-field="o.picking_type_id"/></li>
                        <li t-if="o.payment_term_id">Mode de payment:
                        <span t-field="o.picking_type_id"/></li>
                        <li t-if="o.payment_term_id">Modalité de payment:
                        <span t-field="o.picking_type_id"/></li>
                        <li t-if="o.payment_mode">Mode de paiement:
                        <span t-field="o.payment_mode"/></li>
                        <li t-if="o.order_responsible_id">Responsable reception de la commande:
                        <span t-field="o.order_responsible_id"/></li>
                    </ul>
                
                </div>
            
             <div class="row">
                    <table class="table">
                    <thead>
                        <tr>
                            <td style="text-align:center;">
                                Vérifié par demandeur: 
                            </td>
                            <td style="text-align:center;">
                                Vérifié par procurement:
                            </td>
                            <td style="text-align:center;">
                               Comptabilité:
                            </td>
                            <td style="text-align:center;">
                               Approuvé par DG:
                            </td>
                        </tr>
                    </thead>
                    <!--<tbody>
                        <tr>
                            <td style="text-align:center;">
                            <ul class="list-unstyled">
                              <li t-if="o.service_demande">
                        <span t-field="o.service_demande"/></li></ul> 
                            </td>
                            <td style="text-align:center;">
                               <ul class="list-unstyled">
                              <li t-if="o.verifier_par">
                             <span t-field="o.verifier_par"/></li></ul>  
                            </td>
                            <td style="text-align:center;">
                                <ul class="list-unstyled">
                              <li t-if="o.approuve_par">
                             <span t-field="o.approuve_par"/></li></ul>  
                            </td>
                        </tr>
                    </tbody>-->
                </table>
           </div>
            
            <div class="oe_structure"/>
        </div>
    
</template>

<template id="noheader_report_purchaseorder">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'gbat.noheader_report_purchaseorder_document')"/>
        </t>
    </t>
</template>
</data>
</openerp>
